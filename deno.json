{
  "importMap": "import_map.json",
  "tasks": {
    "lume": "deno eval \"import 'lume/task.ts'\" --",
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "get-fonts": "deno task lume run get-fonts"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "dom"]
  },
  "lint": {
    "files": {
      "exclude": ["_site"]
    }
  }
}
