<!DOCTYPE html>
<html lang="{{ metas.lang }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title | default(metas.site) }}</title>
    <link rel="shortcut icon" type="image/x-icon" href="{{ metas.icon }}" />
    <link rel="stylesheet" href="/style/components.css">
    <link rel="stylesheet" href="/style/main.css">
    {# TODO feed_meta #}
  </head>

  <body>
    <div class="site-header-container no-top-margin">
      {% comp "layout.block", { background_colour: 'var(--l23-dark-blue-grey)' } %}
      <header class="site-header" role="banner">
        <a class="logo" rel="author" href="/">
          <img class='header-logo' src='/assets/images/logo.svg' inline />
          <h1>{{ header_title or metas.site }}</h1>
        </a>
        {{ comp.nav({ url: url }) | safe }}
        {% if work_in_progress %}{{ comp.work_in_progress() | safe }}{% endif %}
      </header>
      {% endcomp %}
    </div>
    <div class='top-spacer no-top-margin'></div>

    <main id="main" role="main" aria-label="Content" class="no-top-margin">
      {{ content | safe }}
    </main>

    <div class='site-footer'>
    {% comp 'layout.block' %}
      <footer>
        <p>&copy; Leeds 2023</p>
        <p><a href="https://github.com/open-innovations/leeds-2023" title="Visit the GitHub repository"><img src="/assets/images/icons/github.svg" class="social-icon" inline></p>
      </footer>
    {% endcomp %}
    </div>
  </body>
</html>