---
css: |
  .dashboard-figure {
    & > * {
      height: 100%;
    }
  }
  
  .panels-link {
    text-decoration: none;
    font-size: 0.9rem;
    padding: 0.5em;
    --background: var(--l23-dark-blue-grey);
    --foreground: white;
    color: var(--foreground);
    background: var(--background);
    height: 100%;
    text-align: center;
    display: grid;
    align-items: center;
    margin-bottom: 0;
    transition: color 0.3s linear, background-color 0.3s linear;
    overflow: hidden;
     &:hover {
      color: white;
      background: black;
    }
    & * {
      margin-top: 0;
    }
  }
---

{%-if link -%}<a class="figure-link" href="{{ link | url }}">{%- endif -%}
<figure class="dashboard-figure" style="
    {%- if max_width %}--max-width:{{ max_width }};{% endif -%}
    {%- if min_width %}--min-width:{{ min_width }};{% endif -%}
    {%- if rows %}grid-row:auto/span {{ rows }};{% endif -%}
    {%- if columns %}grid-column:span {{ columns }};{% endif -%}">
  {{ content | safe }} 
  {% if title  %}<figcaption>{{ title }}</figcaption>{% endif %}
</figure>
{%-if link -%}</a>{%- endif -%}


