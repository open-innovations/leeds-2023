---
css: |

  .dashboard-panel {
    --background: var(--l23-dark-blue-grey);
    --foreground: white;
    color: var(--foreground);
    background: var(--background);
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    transition: color 0.3s linear, background-color 0.3s linear;
    /*overflow: hidden;*/

    & > * {
      max-width: 100%;
      max-height: 100%;
    }

    &:hover {
      color: white;
      background: black;
    }
  }

  .dashboard-panel > .subtext {
    font-size: 1.1em; 
    font-weight: bold;
  }

  .panels-link {
    color: inherit;
    height: 100%;
    overflow: hidden;
    text-decoration: none;
    transition: color 0.3s linear, background-color 0.3s linear;
    padding: 0.5em;

    display: flex;
    flex-direction: column;
    justify-content: center;
    &:hover :is(h2,.impact-big-number) {
      text-decoration: underline;
    }
    & * {
      margin-top: 0;
    }
  }

---


<li class="dashboard-panel" style="
    {% if rows %}grid-row:auto/span {{ rows }};{% endif %}
    {% if columns %}grid-column:span {{ columns }};{% endif %}
    {%- if fg %}--foreground: {{ fg }};{% endif -%}
    {%- if bg %}--background: {{ bg }};{% endif -%}
    {%- if align %}--align: {{ align }};{% endif -%}
    ">
{%-if link -%}<a class="panels-link" href="{{ link | url }}">{%- endif -%}
  {{ content | safe }}
{%-if link -%}</a>{%- endif -%}
</li>
