---
title: LEEDS 2023 Data
layout: layouts/default.njk
---

{% comp "layout.block", { background_colour: 'var(--l23-mint)', vertical_padding: '3rem', classes: 'no-spacing' } %}
  <h1 style="text-align: center; font-size: 3rem; margin-top: 0;">LEEDS 2023 Year of Culture</h1>
  <h2 style="text-align: center; font-size: 4rem; margin-top: 0;">Data Microsite</h2>
{% endcomp %}

{% comp "layout.block", { vertical_padding: '2rem'} %}
{% comp "grid.autogrid" %}

  {% comp "grid.block.impact", {
    link: "https://leeds2023.co.uk/",
    fg: "white",
    bg: "var(--l23-dark-blue-grey)"
  } %}
    <div style="fill: var(--foreground);">
      <img src="/assets/images/logo.svg" height="50" inline/>
    </div>
    <p>Visit the main LEEDS 2023 Year Of Culture website</p>
  {% endcomp %}

  <!-- Some metrics -->
  {{ comp.metric.headline({
    title: "Volunteers confirmed",
    value: metrics.volunteers.by_week.columns.confirmed | last or '--' | localize,
    description: "The number of volunteers who have been confirmed.",
    link: "~/metrics/volunteers.njk",
    colour: "var(--l23-dark-blue-grey)",
    background: "var(--l23-magenta)"
  }) | safe }}
  {{ comp.metric.headline({
    title: "Volunteer applications",
    value: metrics.volunteers.by_week.columns.applied | last | localize,
    description: "The number of people who have applied to be volunteers.",
    link: "~/metrics/volunteers.njk",
    colour: "var(--l23-dark-blue-grey)",
    background: "var(--l23-yellow)"
  }) | safe }}
  {{ comp.metric.headline({
    title: "The Awakening Ballot entries",
    value: metrics.ballot.by_date.columns.cumulative_submissions | last | localize,
    description: "The number of ballot entries recorded.",
    link: "~/metrics/ballot.njk",
    colour: "var(--l23-dark-blue-grey)",
    background: "var(--l23-magenta)"
  }) | safe }}

  {{ comp.metric.headline({
    title: "Roadshow Attendees",
    value: metrics.roadshows.summary.columns.cumulative_attendance | last | localize,
    description: "Between " +
      ( metrics.roadshows.summary.columns.week_ending | first | date('MMMM') ) + " and " +
      ( metrics.roadshows.summary.columns.week_ending | last | date('MMMM') ) + " " +
      ( metrics.roadshows.summary.columns.week_ending | last | date('YYY') ),
    link: "~/metrics/roadshow-attendees.njk",
    colour: "var(--l23-dark-blue-grey)",
    background: "var(--l23-cyan)"
  }) | safe }}


  <div
    data-auto-popup="Need to agree text for About page and this summary"
    data-dependencies="/assets/js/auto-popup.js"
  >
  {% comp "grid.block.impact", {} %}
    <h2>
      About this site
    </h2>
    <p>
      This microsite presents data about the Leeds 2023 Year of Culture.
      It aims to tell the story of the Year of Culture in data.
    </p>
  {% endcomp %}
  </div>

{% endcomp %}
{% endcomp %}